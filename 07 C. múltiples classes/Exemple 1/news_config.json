{
    "config_path": "news_config.json",
    "model_path": "news_model.pth",
    "vocab_path": "news_vocab.json",
    "csv_path": "./data/news.csv",
    "csv_cloumn_names": {
        "class": "category",
        "text": "body"
    },
    "training": {
        "batch_size": 32,
        "epochs": 25,
        "learning_rate": 0.001,
        "validation_split": 0.2
    },
    "model_params": {
        "hidden_size": 256,
        "dropout_rate": 0.5
    },
    "early_stopping": {
        "patience": 5,
        "min_delta": 0
    },
    "reduce_lr_on_plateau": {
        "mode": "min",
        "factor": 0.1,
        "patience": 3
    },
    "classes": [
        "business",
        "entertainment_and_arts",
        "family_and_education",
        "food_and_drink",
        "health",
        "politics",
        "science_and_enviroment",
        "sport",
        "technology",
        "travel"
    ]
}