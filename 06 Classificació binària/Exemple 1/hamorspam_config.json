{
    "config_path": "hamorspam_config.json",
    "model_path": "hamorspam_model.pth",
    "vocab_path": "hamorspam_vocab.json",
    "csv_path": "./data/hamorspam.csv",
    "csv_cloumn_names": {
        "class": "v1",
        "text": "v2"
    },
    "training": {
        "batch_size": 32,
        "epochs": 25,
        "learning_rate": 0.001,
        "validation_split": 0.2
    },
    "model_params": {
        "hidden_size": 256,
        "dropout_rate": 0.5,
        "num_output": 1
    },
    "early_stopping": {
        "patience": 5,
        "min_delta": 0
    },
    "reduce_lr_on_plateau": {
        "mode": "min",
        "factor": 0.1,
        "patience": 3
    },
    "classes": [
        "ham",
        "spam"
    ]
}